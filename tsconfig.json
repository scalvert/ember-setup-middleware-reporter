{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2018",
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "composite": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src"],
  "exclude": ["**/node_modules/**"]
}
